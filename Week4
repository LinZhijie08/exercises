1.
for i in range(1, 10):
    for j in range(1, i + 1):
        print('{}*{}={}'.format(i, j, i*j), end='\t')
    print()
################################ 
for i in range(1, 10):
    for j in range(1, i + 1):
        end_flag = '\n' if i == j else '\t'
        print(f'{i}*{j}={i*j}', end=end_flag)
        
      
2.
def FizzBuzz():
    for a in range(0,100):
        if a % 3 == 0:
            print("Fizz")
        elif a % 5 == 0:
            print("Buzz")
        elif a % 3 == 0 and a % 5 == 0:
            print("FizzBuzz")
        else:
            print(a,"这个数不符合条件")
            
            
 3.
 def fib(n):
    if n < 2:
        return n
    return fib(n-2) + fib(n-1)
for i in range(11):
    print(fib(i))
    
    
    
    
