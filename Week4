#用函数实现
##############################
def switch_case(string):
    lst = []
    for x in string:
        if x.isalpha():
           if x.islower():
               x = x.upper()
           else:
               x = x.lower()
        lst.append(x)
    return ''.join(lst)
    
switch_case('Fh1qoWe92QbvC')


