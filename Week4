def check(str):
    b = str.replace(' ','')
    print(b)
##############################
def remove_spaces(string):
    return ''.join([s for s in string if not s.isspace()])


10.
def guess_number():
    import random
    result = random.randint(0, 100)
    guess_times = 5
    while guess_times > 0:
        guess = int(input('请输入一个数： '))
        if result == guess:
            print("恭喜你猜对了")
            break
        elif result > guess:
            print("很遗憾，你猜小了")
        elif result < guess:
            print("很遗憾，你猜大了")
        guess_times -= 1
        
        
        
        
