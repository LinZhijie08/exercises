d_counter = {}
for c in set(string):
    d_counter[c] = string.count(c)
d_counter


8.
def str_counter(string):
    counter = {'number': 0, 'letter': 0, 'space': 0, 'others': 0}
    for c in list(string):
        if c.isdigit():
            counter['number'] += 1
        elif c.isalpha():
            counter['letter'] += 1
        elif c.isspace():
            counter['space'] += 1
        else:
            counter['others'] += 1
    return counter
print(str_counter('ue2u9n#283  x278$ 1D'))


